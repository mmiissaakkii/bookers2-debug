<table class='table'>
  <tr><%= image_tag user.get_profile_image(100,100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <td>Follows:</td>
    <td><%= link_to user.followings.count, user_followings_path(user.id) %>
  </tr>
  <tr>
    <td>Followers:</td>
    <td><%= link_to user.followers.count, user_followers_path(user.id) %></td>
  </tr>
</table>

<div class='row'>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class: "btn btn-success btn-sm btn-block mb-2" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: "btn btn-info btn-sm btn-block mb-2" %>
    <% end %>
  <% end %>
</div>